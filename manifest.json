  "screenshots": [
    {
      "src": "screenshots/mobile-tracking.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "GPS tracking interface on mobile"
    },
    {
      "src": "screenshots/mobile-map.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "Interactive map view with location history"
    },
    {
      "src": "screenshots/mobile-timeline.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "mobile",
      "label": "Daily timeline with visited places"
    },
    {
      "src": "screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard with statistics and analytics"
    }
  ],
  "shortcuts": [
    {
      "name": "Start Tracking",
      "short_name": "Track",
      "description": "Quickly start GPS location tracking",
      "url": "/?action=start-tracking",
      "icons": [
        {
          "src": "icons/shortcut-track.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Map",
      "short_name": "Map",
      "description": "Open map view with location history",
      "url": "/?tab=map",
      "icons": [
        {
          "src": "icons/shortcut-map.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Timeline",
      "short_name": "Timeline",
      "description": "View daily timeline and activities",
      "url": "/?tab=timeline",
      "icons": [
        {
          "src": "icons/shortcut-timeline.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Statistics",
      "short_name": "Stats",
      "description": "View tracking statistics and insights",
      "url": "/?tab=stats",
      "icons": [
        {
          "src": "icons/shortcut-stats.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "capture_links": "existing-client-event",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "file_handlers": [
    {
      "action": "/import-data",
      "accept": {
        "application/json": [".json"],
        "application/gpx+xml": [".gpx"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "geo",
      "url": "/?coordinates=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 350
  },
  "permissions": [
    "geolocation"
  ],
  "features": [
    "Background Sync",
    "Offline Support",
    "Location Tracking",
    "Data Export",
    "Timeline View",
    "Map Visualization",
    "Statistics Dashboard"
  ]
}